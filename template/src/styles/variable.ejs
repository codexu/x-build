$heading-6-size: 16px; // 标题6

// 间距
$line-height-base: 2; // 行高
$letter-space-base: 2; // 字间距

// 字体
$font-family-base: microsoft yahei,
  pingfang sc; // 中文字体

/*
  desc: 颜色规范
  time: 2020-11-10
*/
// 背景色
$primary-color: #1ba2ff; // 主色调
